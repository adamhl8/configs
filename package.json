{
  "name": "@adamhl8/configs",
  "version": "0.8.4",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/adamhl8/configs"
  },
  "homepage": "https://github.com/adamhl8/configs",
  "bugs": {
    "url": "https://github.com/adamhl8/configs/issues"
  },
  "author": {
    "email": "adamhl@pm.me",
    "name": "Adam Langbert",
    "url": "https://github.com/adamhl8"
  },
  "license": "MIT",
  "exports": {
    "./tsconfig": "./dist/tsconfig.json",
    "./biome": "./dist/biome.jsonc",
    "./prettier": {
      "import": "./dist/prettier.js",
      "types": "./dist/types/prettier.d.ts"
    }
  },
  "files": ["dist/"],
  "scripts": {
    "bundle": "rm -rf ./dist && bun lint && tsc && tsc-alias && cp ./configs/*.{json,jsonc} ./dist/",
    "lint": "tsc --noEmit && biome check --write",
    "prepare": "find .githooks -type f -exec ln -srf {} .git/hooks/ \\; || true",
    "prepublishOnly": "bun bundle"
  },
  "dependencies": {
    "@prettier/plugin-xml": "^3.4.1",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-sh": "^0.18.0",
    "prettier-plugin-tailwindcss": "^0.6.13",
    "prettier-plugin-toml": "^2.0.5"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.0.6",
    "@types/bun": "^1.2.18",
    "prettier": "^3.6.2",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.8.3"
  },
  "publishConfig": {
    "access": "public"
  }
}
