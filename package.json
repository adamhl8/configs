{
  "name": "@adamhl8/configs",
  "version": "0.18.1",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adamhl8/configs.git"
  },
  "homepage": "https://github.com/adamhl8/configs",
  "bugs": {
    "url": "https://github.com/adamhl8/configs/issues"
  },
  "author": {
    "email": "adamhl@pm.me",
    "name": "Adam Langbert",
    "url": "https://github.com/adamhl8"
  },
  "license": "MIT",
  "bin": {
    "adamhl8-knip": "./dist/adamhl8-knip/index",
    "ts-import-fix": "./dist/ts-import-fix/index"
  },
  "exports": {
    "./tsconfig": "./dist/configs/tsconfig.base.json",
    "./biome": "./dist/configs/biome.base.json",
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": ["./dist/"],
  "scripts": {
    "bundle": "bun lint && tsdown",
    "lint": "bun ./generate-biome-rules.ts && markdown-toc -i --bullets '-' --maxdepth 3 ./README.md && ./src/ts-import-fix/index.ts -w --skip-alias && tsc --noEmit && biome check --write && ./src/adamhl8-knip/index.ts",
    "prepare": "find .githooks -type f -exec ln -srf {} .git/hooks/ \\; || true",
    "prepublishOnly": "bun bundle"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@optique/core": "^0.9.1",
    "@optique/run": "^0.9.1",
    "@prettier/plugin-xml": "^3.4.2",
    "es-toolkit": "^1.44.0",
    "get-tsconfig": "^4.13.0",
    "picocolors": "^1.1.1",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-sh": "^0.18.0",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "prettier-plugin-toml": "^2.0.6",
    "remeda": "^2.33.4",
    "ts-explicit-errors": "^4.1.1",
    "type-fest": "^5.4.1"
  },
  "devDependencies": {
    "@arethetypeswrong/core": "^0.18.2",
    "@biomejs/biome": "^2.3.12",
    "@types/bun": "^1.3.6",
    "knip": "^5.82.1",
    "markdown-toc": "^1.2.0",
    "prettier": "^3.8.1",
    "publint": "^0.3.17",
    "tsdown": "^0.20.1",
    "typescript": "^5.9.3"
  },
  "publishConfig": {
    "access": "public"
  }
}
